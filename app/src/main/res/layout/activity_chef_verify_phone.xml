<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/t"
    tools:context=".chefRestaurant.ChefVerifyPhone">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="380dp"
        android:background="@drawable/scrollviewshapper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="monospace"
            android:text="Enter OTP"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="OTP"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:id="@+id/otp"
            android:theme="@style/TextInputLayout"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/verify"
            android:text="Verify"
            android:layout_gravity="center"
            android:background="@drawable/verifyotpbutton"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Resend OTP"
            android:id="@+id/resendOtp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/resendotpbutton"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hello "
            android:id="@+id/text"
            android:textSize="16sp"
            android:textColor="#FF9100"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>